{
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 100, // <-- THIS IS THE KEY SETTING. Increase it to allow longer lines.
  "trailingComma": "es5",
  "bracketSameLine": false, // Try setting this to 'true' to keep brackets on the same line
  "bracketSpacing": true,
  "arrowParens": "avoid" // Helps reduce parentheses in arrow functions
}
